{
  "autoDocstring.docstringFormat": "google",
  "debug.console.fontFamily": "editor",
  "editor.codeActionsOnSave": { "source.organizeImports": "explicit" },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "UDEV Gothic JPDOC",
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.rulers": [79],
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "string.quoted.docstring.multi.python",
        "settings": {
          "foreground": "#ffBB00"
        }
      }
    ]
  },
  "explorer.confirmDragAndDrop": false,
  "explorer.excludeGitIgnore": false,
  "extensions.ignoreRecommendations": false,
  "git.autoRepositoryDetection": "openEditors",
  "git.inputValidation": true,
  "mypy-type-checker.args": ["--config-file=pyproject.toml"],
  "prettier.configPath": ".vscode/.prettierrc.toml",
  "prettier.ignorePath": ".vscode/.prettierignore",
  "prettier.requireConfig": true,
  "pythonTestExplorer.testFramework": "pytest",
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.extraPaths": [
    "packages/pyspartalib/src",
    "packages/pyspartaimg/src",
    "packages/pyspartadevc/src"
  ],
  "python.analysis.typeCheckingMode": "strict",
  "python.languageServer": "Pylance",
  "python.testing.pytestEnabled": true,
  "ruff.configuration": "pyproject.toml",
  "testing.automaticallyOpenTestResults": "neverOpen",
  "testing.gutterEnabled": true,
  "workbench.colorTheme": "Dracula Theme",
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "none",
  "[dockerfile]": { "editor.defaultFormatter": "ms-azuretools.vscode-docker" },
  "[dotenv]": { "editor.defaultFormatter": "foxundermoon.shell-format" },
  "[ignore]": { "editor.defaultFormatter": "foxundermoon.shell-format" },
  "[python]": { "editor.defaultFormatter": "charliermarsh.ruff" },
  "[shellscript]": { "editor.defaultFormatter": "foxundermoon.shell-format" }
}
